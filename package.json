{
  "name": "ft_transcendence",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "$npm_execpath --parallel --filter frontend --filter backend dev",
    "lint": "$npm_execpath run lint:codestyle && $npm_execpath run lint:buf",
    "lint:fix": "$npm_execpath run lint:codestyle:fix",
    "lint:codestyle": "biome check",
    "lint:codestyle:fix": "biome check --write",
    "lint:buf": "buf lint",
    "lint:buf:fix": "buf format -w && buf lint",
    "gen:buf": "buf generate && $npm_execpath --filter @workspace/generated build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@bufbuild/buf": "^1.57.0",
    "@bufbuild/protoc-gen-es": "^2.7.0",
    "@tsconfig/strictest": "^2.0.5"
  }
}
